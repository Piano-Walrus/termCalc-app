<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/assignInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the number key(s) to which you would like to assign "
            android:paddingHorizontal="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/assignButtonGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/assignInstructions">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/assignRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/assign7"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:textSize="24sp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="7" />

                <Button
                    android:id="@+id/assign8"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:textSize="24sp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="8" />

                <Button
                    android:id="@+id/assign9"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:textSize="24sp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="9" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/assignRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/assignRow3">

                <Button
                    android:id="@+id/assign4"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:textSize="24sp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="4" />

                <Button
                    android:id="@+id/assign5"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:textSize="24sp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="5" />

                <Button
                    android:id="@+id/assign6"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:textSize="24sp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="6" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/assignRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/assignRow2">

                <Button
                    android:id="@+id/assign1"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:textSize="24sp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="1" />

                <Button
                    android:id="@+id/assign2"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:textSize="24sp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="2" />

                <Button
                    android:id="@+id/assign3"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:textSize="24sp"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="3" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

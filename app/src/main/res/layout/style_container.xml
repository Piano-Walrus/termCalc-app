<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101217">

    <ImageButton
        android:id="@+id/styleThemePlaceholder"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/editor_light_circle"
        android:clickable="false"
        android:elevation="6dp"
        android:src="@drawable/editor_inner_accent_circle"
        app:tint="#2A2A2A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/styleColorPlaceholder"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/editor_light_circle"
        android:layout_marginStart="8dp"
        android:clickable="false"
        android:elevation="6dp"
        android:src="@drawable/editor_inner_accent_circle"
        app:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/styleThemePlaceholder"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/styleDivider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/styleColorPlaceholder"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/styleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/style_color"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/styleDivider"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerBG"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="72dp"
        android:paddingBottom="32dp"
        android:background="@drawable/editor_container_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/styleColorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:paddingBottom="3dp"
            android:text="@string/style_color"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="@+id/styleColorTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/styleColorTitle" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/resetOptionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/styleColorTitle">

            <TextView
                android:id="@+id/resetTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:clickable="false"
                android:focusable="false"
                android:text="@string/editor_reset"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="@+id/resetIcon"
                app:layout_constraintStart_toEndOf="@id/resetIcon"
                app:layout_constraintTop_toTopOf="@+id/resetIcon" />

            <ImageButton
                android:id="@+id/resetIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:clickable="false"
                android:focusable="false"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_reset_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/styleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="@string/style"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resetOptionLayout" />

        <androidx.cardview.widget.CardView
            android:id="@+id/darkCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/darkColorPrimary"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toStartOf="@+id/styleCardMiddleGuide"
            app:layout_constraintHeight="parent=0.1"
            app:layout_constraintStart_toStartOf="@+id/styleTitle"
            app:layout_constraintTop_toBottomOf="@+id/styleTitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/darkRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:buttonTint="@color/white"
                    android:checked="true"
                    android:text="@string/dark"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/darkCardTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_tab_background"
                    android:backgroundTint="@color/colorAccent"
                    android:elevation="6dp"
                    android:src="@drawable/ic_baseline_format_color_text_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight="parent=0.425"
                    app:layout_constraintWidth="ratio=1.55:1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lightCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight="parent=0.1"
            app:layout_constraintStart_toEndOf="@+id/styleCardMiddleGuide"
            app:layout_constraintTop_toBottomOf="@+id/styleTitle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/lightRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:buttonTint="#222222"
                    android:text="@string/light"
                    android:textColor="#222222"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/lightCardTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_tab_background"
                    android:backgroundTint="@color/colorAccent"
                    android:elevation="6dp"
                    android:src="@drawable/ic_baseline_format_color_text_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight="parent=0.425"
                    app:layout_constraintWidth="ratio=1.55:1"
                    app:tint="#222222" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/blackCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toStartOf="@+id/styleCardMiddleGuide"
            app:layout_constraintHeight="parent=0.1"
            app:layout_constraintStart_toStartOf="@+id/styleTitle"
            app:layout_constraintTop_toBottomOf="@+id/darkCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/blackRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:buttonTint="@color/white"
                    android:text="@string/black"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/blackCardTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_tab_background"
                    android:backgroundTint="@color/colorAccent"
                    android:elevation="6dp"
                    android:src="@drawable/ic_baseline_format_color_text_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight="parent=0.425"
                    app:layout_constraintWidth="ratio=1.55:1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/midnightCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight="parent=0.1"
            app:layout_constraintStart_toEndOf="@+id/styleCardMiddleGuide"
            app:layout_constraintTop_toBottomOf="@+id/darkCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/midnightRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:buttonTint="@color/colorAccent"
                    android:text="@string/midnight"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/midnightCardTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_tab_background"
                    android:backgroundTint="#1B1B1B"
                    android:elevation="6dp"
                    android:src="@drawable/ic_baseline_format_color_text_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight="parent=0.425"
                    app:layout_constraintWidth="ratio=1.55:1"
                    app:tint="@color/colorAccent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/monochromeCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/colorAccentDarker"
            app:cardCornerRadius="6dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toStartOf="@+id/styleCardMiddleGuide"
            app:layout_constraintHeight="parent=0.1"
            app:layout_constraintStart_toStartOf="@+id/styleTitle"
            app:layout_constraintTop_toBottomOf="@+id/blackCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/monochromeRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:buttonTint="#303030"
                    android:text="@string/monochrome"
                    android:textColor="#303030"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/monochromeCardTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/style_tab_background"
                    android:backgroundTint="@color/monochromeCardTabColor"
                    android:src="@drawable/ic_baseline_format_color_text_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight="parent=0.425"
                    app:layout_constraintWidth="ratio=1.55:1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/styleCardMiddleGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/colorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="@string/color"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/monochromeCard" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/colorsLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:animateLayoutChanges="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingVertical="8dp"
            android:visibility="visible"
            app:layout_constraintHeight="parent=0.15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/colorTitle">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/color1Guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.167" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/color2Guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.334" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/color3Guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/color4Guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.668" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/color5Guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.835" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/colorHGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <ImageView
                android:id="@+id/colorSelector"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/theme_style_selected"
                app:layout_constraintBottom_toBottomOf="@+id/colorHGuide"
                app:layout_constraintEnd_toStartOf="@+id/color1Guide"
                app:layout_constraintHeight="parent=0.505"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth="ratio=1:1"/>

            <ImageButton
                android:id="@+id/tealButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="false"
                android:elevation="6dp"
                android:focusable="false"
                android:src="@drawable/editor_color_circle"
                android:tintMode="screen"
                app:layout_constraintEnd_toStartOf="@+id/color1Guide"
                app:layout_constraintHeight="ratio=1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth="parent=0.125"
                app:tint="#009688" />

            <ImageButton
                android:id="@+id/greenButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="false"
                android:elevation="6dp"
                android:focusable="false"
                android:src="@drawable/editor_color_circle"
                android:tintMode="screen"
                app:layout_constraintBottom_toBottomOf="@+id/tealButton"
                app:layout_constraintEnd_toEndOf="@+id/color2Guide"
                app:layout_constraintHeight="ratio=1:1"
                app:layout_constraintStart_toEndOf="@id/color1Guide"
                app:layout_constraintTop_toTopOf="@+id/tealButton"
                app:layout_constraintWidth="parent=0.125"
                app:tint="#4CAF50" />

            <ImageButton
                android:id="@+id/cyanButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="false"
                android:elevation="6dp"
                android:focusable="false"
                android:src="@drawable/editor_color_circle"
                android:tintMode="screen"
                app:layout_constraintBottom_toBottomOf="@+id/tealButton"
                app:layout_constraintEnd_toEndOf="@+id/color3Guide"
                app:layout_constraintHeight="ratio=1:1"
                app:layout_constraintStart_toEndOf="@id/color2Guide"
                app:layout_constraintTop_toTopOf="@+id/tealButton"
                app:layout_constraintWidth="parent=0.125"
                app:tint="#00BCD4" />

            <ImageButton
                android:id="@+id/blueButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="false"
                android:elevation="6dp"
                android:focusable="false"
                android:src="@drawable/editor_color_circle"
                android:tintMode="screen"
                app:layout_constraintBottom_toBottomOf="@+id/greenButton"
                app:layout_constraintEnd_toEndOf="@+id/color4Guide"
                app:layout_constraintHeight="ratio=1:1"
                app:layout_constraintStart_toEndOf="@id/color3Guide"
                app:layout_constraintTop_toTopOf="@+id/greenButton"
                app:layout_constraintWidth="parent=0.125"
                app:tint="#2196F3" />

            <ImageButton
                android:id="@+id/indigoButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="false"
                android:elevation="6dp"
                android:focusable="false"
                android:src="@drawable/editor_color_circle"
                android:tintMode="screen"
                app:layout_constraintBottom_toBottomOf="@+id/cyanButton"
                app:layout_constraintEnd_toEndOf="@+id/color5Guide"
                app:layout_constraintHeight="ratio=1:1"
                app:layout_constraintStart_toEndOf="@id/color4Guide"
                app:layout_constraintTop_toTopOf="@+id/cyanButton"
                app:layout_constraintWidth="parent=0.125"
                app:tint="#3F51B5" />

            <ImageButton
                android:id="@+id/purpleButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="false"
                android:elevation="6dp"
                android:focusable="false"
                android:src="@drawable/editor_color_circle"
                android:tintMode="screen"
                app:layout_constraintBottom_toBottomOf="@+id/indigoButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight="ratio=1:1"
                app:layout_constraintStart_toEndOf="@id/color5Guide"
                app:layout_constraintTop_toTopOf="@+id/indigoButton"
                app:layout_constraintWidth="parent=0.125"
                app:tint="#673AB7" />

            <ImageButton
                android:id="@+id/pinkButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="false"
                android:elevation="6dp"
                android:focusable="false"
                android:src="@drawable/editor_color_circle"
                android:tintMode="screen"
                app:layout_constraintEnd_toStartOf="@+id/color1Guide"
                app:layout_constraintHeight="ratio=1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tealButton"
                app:layout_constraintWidth="parent=0.125"
                app:tint="#E91E63" />

            <ImageButton
                android:id="@+id/redButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="false"
                android:elevation="6dp"
                android:focusable="false"
                android:src="@drawable/editor_color_circle"
                android:tintMode="screen"
                app:layout_constraintBottom_toBottomOf="@+id/pinkButton"
                app:layout_constraintEnd_toEndOf="@+id/color2Guide"
                app:layout_constraintHeight="ratio=1:1"
                app:layout_constraintStart_toEndOf="@id/color1Guide"
                app:layout_constraintTop_toTopOf="@+id/pinkButton"
                app:layout_constraintWidth="parent=0.125"
                app:tint="#F44336" />

            <ImageButton
                android:id="@+id/orangeButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="false"
                android:elevation="6dp"
                android:focusable="false"
                android:src="@drawable/editor_color_circle"
                android:tintMode="screen"
                app:layout_constraintBottom_toBottomOf="@+id/pinkButton"
                app:layout_constraintEnd_toEndOf="@+id/color3Guide"
                app:layout_constraintHeight="ratio=1:1"
                app:layout_constraintStart_toEndOf="@id/color2Guide"
                app:layout_constraintTop_toTopOf="@+id/pinkButton"
                app:layout_constraintWidth="parent=0.125"
                app:tint="#FF9800" />

            <ImageButton
                android:id="@+id/yellowButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="false"
                android:elevation="6dp"
                android:focusable="false"
                android:src="@drawable/editor_color_circle"
                android:tintMode="screen"
                app:layout_constraintBottom_toBottomOf="@+id/pinkButton"
                app:layout_constraintEnd_toEndOf="@+id/color4Guide"
                app:layout_constraintHeight="ratio=1:1"
                app:layout_constraintStart_toEndOf="@id/color3Guide"
                app:layout_constraintTop_toTopOf="@+id/pinkButton"
                app:layout_constraintWidth="parent=0.125"
                app:tint="#FFC107" />

            <ImageButton
                android:id="@+id/brownButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="false"
                android:elevation="6dp"
                android:focusable="false"
                android:src="@drawable/editor_color_circle"
                android:tintMode="screen"
                app:layout_constraintBottom_toBottomOf="@+id/pinkButton"
                app:layout_constraintEnd_toEndOf="@+id/color5Guide"
                app:layout_constraintHeight="ratio=1:1"
                app:layout_constraintStart_toEndOf="@id/color4Guide"
                app:layout_constraintTop_toTopOf="@+id/pinkButton"
                app:layout_constraintWidth="parent=0.125"
                app:tint="#795548" />

            <ImageButton
                android:id="@+id/blackButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="false"
                android:elevation="6dp"
                android:focusable="false"
                android:src="@drawable/editor_color_circle"
                android:tintMode="screen"
                app:layout_constraintBottom_toBottomOf="@+id/pinkButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight="ratio=1:1"
                app:layout_constraintStart_toEndOf="@id/color5Guide"
                app:layout_constraintTop_toTopOf="@+id/pinkButton"
                app:layout_constraintWidth="parent=0.125"
                app:tint="@color/black" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/shadeCardLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#1D1D1D"
            app:layout_constraintHeight="parent=0.2155"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/colorsLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/shadeTabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabTextColor="@color/white"
                    app:tabSelectedTextColor="@color/white"
                    app:tabRippleColor="@color/colorAccent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/darkTab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dark" />

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/lightTab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/light" />

                </com.google.android.material.tabs.TabLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/shadesInnerLayout"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shadeTabLayout">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/shadeLeftGuide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.333" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/shadeRightGuide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.666" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/shadeHGuide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.5" />

                    <Button
                        android:id="@+id/shade1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#009688"
                        android:paddingTop="24dp"
                        android:paddingEnd="4dp"
                        android:text="#009688"
                        android:textAlignment="viewEnd"
                        android:textAllCaps="true"
                        app:layout_constraintBottom_toBottomOf="@id/shadeHGuide"
                        app:layout_constraintEnd_toStartOf="@+id/shadeLeftGuide"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/shade2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#00897b"
                        android:paddingTop="24dp"
                        android:paddingEnd="4dp"
                        android:text="#00897b"
                        android:textAlignment="viewEnd"
                        android:textAllCaps="true"
                        app:layout_constraintBottom_toBottomOf="@id/shadeHGuide"
                        app:layout_constraintEnd_toStartOf="@+id/shadeRightGuide"
                        app:layout_constraintStart_toEndOf="@+id/shadeLeftGuide"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/shade3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#00796b"
                        android:paddingTop="24dp"
                        android:paddingEnd="4dp"
                        android:text="#00796b"
                        android:textAlignment="viewEnd"
                        android:textAllCaps="true"
                        app:layout_constraintBottom_toBottomOf="@id/shadeHGuide"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/shadeRightGuide"
                        app:layout_constraintTop_toTopOf="parent" />
                    <Button
                        android:id="@+id/shade4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#00695c"
                        android:paddingTop="24dp"
                        android:paddingEnd="4dp"
                        android:text="#00695c"
                        android:textAlignment="viewEnd"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/shadeLeftGuide"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/shadeHGuide" />

                    <Button
                        android:id="@+id/shade5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#004b3d"
                        android:paddingTop="24dp"
                        android:paddingEnd="4dp"
                        android:text="#004b3d"
                        android:textAlignment="viewEnd"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/shadeRightGuide"
                        app:layout_constraintStart_toEndOf="@id/shadeLeftGuide"
                        app:layout_constraintTop_toBottomOf="@id/shadeHGuide" />

                    <Button
                        android:id="@+id/shade6"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="#004b3d"
                        android:paddingTop="24dp"
                        android:paddingEnd="4dp"
                        android:text="#002b3d"
                        android:textAlignment="viewEnd"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/shadeRightGuide"
                        app:layout_constraintTop_toBottomOf="@id/shadeHGuide" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>